{% extends 'base.html.twig' %}

{% block title %}Wish List{% endblock %}

{% block body %}
    <h1>Wish List</h1>
    <ul>
        {% for wish in wishes %}
            <li>
                <a href="{{ path('wish_detail', {'wishId' : wish.id}) }}"><p> {{ wish.title }} [{{ wish.category.name }}]</p></a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}

